{
  // ========================================
  // DEVELOPMENT LAW ENFORCEMENT - VS CODE
  // ========================================
  // Reference: /DEVELOPMENT_LAW.md and /CURSOR_SYSTEM_PROMPT.md
  // Stack: NestJS + Prisma + PostgreSQL + React + MUI ONLY
  // Standards: FHIR R4, HIPAA, SNOMED CT, LOINC, HL7

  // ========================================
  // MANDATORY LINTING AND ERROR CHECKING
  // ========================================
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Prevent saving files with errors
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // TypeScript settings - show errors and prevent saving with errors
  "typescript.validate.enable": true,
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // ESLint settings - mandatory checks
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.run": "onSave",
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.alwaysShowStatus": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Stylelint settings for CSS
  "stylelint.validate": ["css", "scss", "less"],
  "stylelint.enable": true,

  // File watcher exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true
  },

  // Auto-save settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // Deny save if there are errors (via extension)
  "editor.saveOnFocusLost": true,

  // Prettier settings
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit"
    }
  },

  // Error lens for inline error display
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.gutterIconsEnabled": true,
  "errorLens.followCursor": "activeLine",

  // Problems panel settings
  "problems.showCurrentInStatus": true,
  "problems.decorations.enabled": true,

  // File associations
  "files.associations": {
    "*.css": "css",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact"
  },

  // TypeScript settings - strict mode
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.reportStyleChecksAsWarnings": false,
  "typescript.preferences.useLabelDetailsInCompletionEntries": true,

  // Editor settings for better error visibility
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // File watcher exclusions for performance
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },

  // JSON validation settings
  "json.validate.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["package.json"],
      "schema": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" }
        }
      }
    },
    {
      "fileMatch": ["**/.vscode/tasks.json"],
      "schema": {
        "type": "object",
        "required": ["version", "tasks"],
        "properties": {
          "version": { "type": "string" },
          "tasks": { "type": "array" }
        }
      }
    },
    {
      "fileMatch": ["**/.vscode/launch.json"],
      "schema": {
        "type": "object",
        "required": ["version"],
        "properties": {
          "version": { "type": "string" }
        }
      }
    }
  ],

  // Terminal settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.scrollback": 10000,
  "editor.linkedEditing": true,

  // ========================================
  // PRISMA CONFIGURATION (MANDATORY)
  // ========================================
  "[prisma]": {
    "editor.formatOnSave": true
  },

  // ========================================
  // HEALTHCARE TERMINOLOGY (SPELL CHECK)
  // ========================================
  "cSpell.words": [
    "FHIR",
    "HIPAA",
    "SNOMED",
    "LOINC",
    "HL7",
    "Prisma",
    "NestJS",
    "Zustand",
    "Axios",
    "bcrypt",
    "CSRF",
    "XSRF",
    "PHI",
    "resourceType",
    "camelCase",
    "PostgreSQL",
    "Kong",
    "microservices",
    "Dto",
    "dtos",
    "ADT",
    "ORM",
    "RBAC"
  ],

  // ========================================
  // PATH INTELLISENSE (MONOREPO)
  // ========================================
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/provider-portal/src",
    "@auth": "${workspaceFolder}/services/authentication-service/src",
    "@patient": "${workspaceFolder}/services/patient-service/src",
    "@encounter": "${workspaceFolder}/services/encounter-service/src"
  },

  // ========================================
  // INLAY HINTS (TYPESCRIPT)
  // ========================================
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,

  // ========================================
  // FILE NESTING (CLEAN EXPLORER)
  // ========================================
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json, pnpm-lock.yaml, yarn.lock",
    "tsconfig.json": "tsconfig.*.json",
    ".env": ".env.*",
    "docker-compose.yml": "docker-compose.*.yml, Dockerfile*",
    "*.ts": "${capture}.spec.ts, ${capture}.test.ts",
    "*.tsx": "${capture}.spec.tsx, ${capture}.test.tsx"
  },

  // ========================================
  // SECURITY & WORKSPACE TRUST
  // ========================================
  "security.workspace.trust.untrustedFiles": "prompt",
  "security.workspace.trust.banner": "always",

  // ========================================
  // GIT BRANCH PROTECTION
  // ========================================
  "git.branchProtection": ["main", "master"],
  "git.confirmSync": true,
  "git.autofetch": true

  // ========================================
  // DEVELOPMENT LAW REMINDERS
  // ========================================
  // 1. Use Prisma ONLY (NO TypeORM)
  // 2. Use Material-UI ONLY (NO other UI libraries)
  // 3. Never commit .env files or secrets
  // 4. Log all PHI access for HIPAA compliance
  // 5. Use FHIR R4 for patient data
  // 6. Validate SNOMED CT and LOINC codes
  // 7. Test authentication before committing
  // 8. Never break login flow or dashboard
  // 9. Run migrations before starting services
  // 10. Review DEVELOPMENT_LAW.md before coding
}
