{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint: All Services",
      "type": "shell",
      "command": "npm run lint:all",
      "problemMatcher": ["$eslint-stylish"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Format: All Files",
      "type": "shell",
      "command": "npm run format:all",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Validate: Full Check",
      "type": "shell",
      "command": "npm run validate",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Type Check: TypeScript",
      "type": "shell",
      "command": "npm run type-check",
      "problemMatcher": ["$tsc"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Validate: JSON Files",
      "type": "shell",
      "command": "find . -name '*.json' -not -path '*/node_modules/*' -not -path '*/.git/*' | head -20 | xargs bash scripts/validate-json.sh",
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
