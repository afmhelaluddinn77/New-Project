{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "patient-portal",
    "provider-portal",
    "admin-portal",
    "lab-portal",
    "pharmacy-portal",
    "billing-portal",
    "radiology-portal",
    "nurses-portal",
    "it-portal",
    "common-portal"
  ]
}
